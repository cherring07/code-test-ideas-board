{
  "name": "ideas-board",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "babel-core": "^7.0.0-0",
    "babel-preset-env": "^1.7.0",
    "babel-preset-react": "^6.24.1",
    "connected-react-router": "^4.4.0",
    "history": "^4.4.1",
    "prop-types": "15.6.2",
    "react": "^16.6.0",
    "react-dom": "^16.6.0",
    "react-redux": "^4.4.8",
    "react-router": "^4.1.0",
    "react-router-dom": "^4.3.1",
    "react-scripts": "2.1.0",
    "rebass": "^3.0.0-9",
    "redux": "^3.6.0",
    "redux-form": "7.3.0",
    "regenerator-runtime": "^0.12.1",
    "styled-components": "4.0.3"
  },
  "devDependencies": {
    "@babel/plugin-syntax-object-rest-spread": "^7.0.0",
    "babel-jest": "^23.6.0",
    "babel-plugin-styled-components": "^1.8.0",
    "enzyme": "^3.7.0",
    "enzyme-adapter-react-16": "^1.0.5",
    "eslint": "5.6.0",
    "eslint-config-airbnb": "17.1.0",
    "eslint-config-airbnb-base": "13.1.0",
    "eslint-import-resolver-webpack": "0.9.0",
    "eslint-plugin-babel": "5.0.0",
    "eslint-plugin-import": "2.14.0",
    "eslint-plugin-jest": "21.15.0",
    "eslint-plugin-jsx-a11y": "6.1.2",
    "eslint-plugin-react": "7.11.1",
    "husky": "^1.1.2",
    "jest": "^23.6.0",
    "jest-cli": "^23.6.0",
    "lint-staged": "^7.3.0",
    "prettier": "^1.14.3",
    "prettier-eslint": "^8.8.2",
    "prettier-eslint-cli": "^4.7.1",
    "react-router-test-context": "^0.1.0"
  },
  "scripts": {
    "build": "react-scripts build",
    "eject": "react-scripts eject",
    "lint:eslint": "eslint --ignore-path .gitignore",
    "lint:fix": "npm run lint:js --fix",
    "lint:js": "npm run lint:eslint src --fix",
    "lint:prettier": "prettier-eslint --semi --trailing-comma 'es5' --write \"*.js\"",
    "precommit": "lint-staged",
    "start": "react-scripts start",
    "test": "jest --coverage",
    "test:watch": "jest --watch"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.js": [
      "npm run lint:js",
      "npm run lint:prettier",
      "npm run test",
      "git add"
    ]
  },
  "eslintConfig": {
    "parser": "babel-eslint",
    "plugins": [
      "babel",
      "jest",
      "react",
      "jsx-a11y"
    ],
    "extends": [
      "eslint:recommended",
      "plugin:react/recommended",
      "plugin:import/errors"
    ],
    "env": {
      "browser": true,
      "jest/globals": true,
      "node": true,
      "es6": true
    },
    "parserOptions": {
      "ecmaVersion": 6,
      "ecmaFeatures": {
        "jsx": true
      },
      "sourceType": "module"
    },
    "rules": {
      "import/imports-first": 0,
      "import/newline-after-import": 0,
      "import/no-dynamic-require": 0,
      "import/no-extraneous-dependencies": 0,
      "import/no-named-as-default": 0,
      "import/no-unresolved": 2,
      "import/prefer-default-export": 0,
      "import/extensions": 0,
      "jsx-a11y/aria-props": 2,
      "jsx-a11y/heading-has-content": 0,
      "jsx-a11y/label-has-for": 2,
      "jsx-a11y/mouse-events-have-key-events": 2,
      "jsx-a11y/role-has-required-aria-props": 2,
      "jsx-a11y/role-supports-aria-props": 2,
      "react/forbid-prop-types": 0,
      "react/jsx-first-prop-new-line": [
        2,
        "multiline"
      ],
      "react/jsx-filename-extension": 0,
      "react/jsx-no-target-blank": 0,
      "react/jsx-boolean-value": 0,
      "max-len": 0,
      "newline-per-chained-call": 0,
      "no-confusing-arrow": 0,
      "no-use-before-define": 0,
      "prefer-template": 2,
      "class-methods-use-this": 0,
      "array-bracket-spacing": [
        "error",
        "never"
      ],
      "object-curly-spacing": 0,
      "quotes": [
        2,
        "single",
        "avoid-escape"
      ]
    }
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.{js}",
      "!src/serviceWorker.js",
      "!src/**/stories/*"
    ],
    "roots": [
      "src"
    ],
    "setupTestFrameworkScriptFile": "<rootDir>src/internal/setupTests.js"
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ]
}
